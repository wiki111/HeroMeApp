<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.maciej.udemyfragmentspractice.Fragments.PickAPowerFragment">


    <com.example.maciej.udemyfragmentspractice.Views.LinearLayoutLines
        android:id="@+id/mainLinear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/hero_bg_gradient"
        android:orientation="vertical"
        android:paddingTop="15dp">

        <LinearLayout
            android:id="@+id/firstItemGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:paddingBottom="5dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:paddingTop="5dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PICK A POWER"
                android:textAlignment="center"
                android:textColor="#FBC82D"
                android:textSize="24sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/secondItemGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:paddingLeft="25dp"
            android:paddingRight="25dp">

            <Button
                android:id="@+id/turtleBtn"
                style="@style/item_pick_btn_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/turtle_power"
                android:drawableRight="@drawable/item_unselected"
                android:text="Turtle power" />

            <Button
                android:id="@+id/lightningBtn"
                style="@style/item_pick_btn_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/thors_hammer"
                android:drawableRight="@drawable/item_unselected"
                android:text="Lightning" />

            <Button
                android:id="@+id/flightBtn"
                style="@style/item_pick_btn_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/super_man_crest"
                android:drawableRight="@drawable/item_unselected"
                android:text="Flight" />

            <Button
                android:id="@+id/webBtn"
                style="@style/item_pick_btn_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/spider_web"
                android:drawableRight="@drawable/item_unselected"
                android:text="Web Slinging" />

            <Button
                android:id="@+id/laserBtn"
                style="@style/item_pick_btn_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/laser_vision"
                android:drawableRight="@drawable/item_unselected"
                android:text="Laser Vision" />

            <Button
                android:id="@+id/superBtn"
                style="@style/item_pick_btn_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/super_strength"
                android:drawableRight="@drawable/item_unselected"
                android:text="Super Strength" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/thirdItemGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:paddingLeft="25dp"
            android:paddingRight="25dp">

            <Button
                android:id="@+id/backstoryBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/hero_solid_btn"
                android:backgroundTint="#FBC82D"
                android:text="Show backstory"
                android:textColor="#10161D"
                android:textSize="22sp" />
        </LinearLayout>

    </com.example.maciej.udemyfragmentspractice.Views.LinearLayoutLines>

</FrameLayout>
